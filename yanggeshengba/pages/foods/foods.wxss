/* pages/foods/foods.wxss */
page {
  background-color: #f3f3f3;
}

.search {
  padding: 25rpx;
  background-color: #fff;
}

.input {
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #f3f3f3;
  border-radius: 25rpx;
}

.top {
  border-top: 1rpx solid #f3f3f3;
  height: 50rpx;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.top_classify {
  font-size: 30rpx;
  /* border-bottom: 5rpx solid #29a03c; */
}

.img {
  width: 750rpx;
  height: 320rpx;
  margin-bottom: 25rpx;
}

.list {
  background-color: #fff;
  padding: 0 30rpx;
}

.list_item {
  height: 150rpx;
  padding: 30rpx 0;
  display: flex;
}

.list_item:not(:last-child) {
  border-bottom: 1rpx solid #f3f3f3;
}

.item_img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}

.item.content {
  flex-grow: 1;
  display: flex;

}

.content_name {
  font-size: 30rpx;
  height: 50rpx;
}

.tags {
  flex-grow: 1;
}

.tag_good {
  height: 30rpx;
  font-size: 28rpx;
  color: #29a03c;
  border-radius: 15rpx;
  margin-top: 5rpx;
}

.tag_bad {
  height: 30rpx;
  font-size: 28rpx;
  color: red;
  border-radius: 15rpx;
  margin-top: 5rpx;
}