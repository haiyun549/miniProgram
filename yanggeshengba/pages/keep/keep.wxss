/* pages/baike.wxss */
page {
  background-color: #f3f3f3;
}

.search {
  padding: 25rpx;
  background-color: #fff;
}

.input {
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #f3f3f3;
  border-radius: 25rpx;
}

.list {
  margin-top: 25rpx;
  background-color: #fff;
}

.top_name {
  height: 40rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f3f3f3;
}

.name {
  border-left: 5rpx solid #29a03c;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.item {
  height: 100rpx;
  display: flex;
  margin: 0 30rpx;
  padding: 30rpx 0;
}

.item:first-child {
  border-bottom: 1rpx solid #f3f3f3;
}

.item_title {
  width: 70rpx;
}

.title_img {
  height: 70rpx;
  width: 70rpx;
}

.title_txt {
  height: 30rpx;
  font-size: 25rpx;
  text-align: center;
}

.item_content {
  margin-left: 15rpx;
  border-left: 1rpx solid #f3f3f3;
  padding-left: 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}